---
export interface Props {
  member: {
    id: number;
    name: string;
    slug: string;
    role: string;
    bio: string;
    skills: string[];
    email?: string;
    linkedin?: string;
    github?: string;
    portfolio?: string;
  };
}

const { member } = Astro.props;

// Always use /gruppeside prefix for consistency
const memberUrl = `/gruppeside/${member.slug}`;
---

<div class="member-card">
  <a href={memberUrl} class="member-card-link">
    <div class="member-image">
      <img 
        src=`/gruppeside/images/${member.slug}.jpeg` 
        alt={member.name}
        loading="lazy"
      />
    </div>
    
    <div class="member-info">
      <h3>{member.name}</h3>
      <p class="role">{member.role}</p>
      
      <div class="skills">
        <h4>Skills:</h4>
        <div class="skill-tags">
          {member.skills.map(skill => (
            <span class="skill-tag">{skill}</span>
          ))}
        </div>
      </div>
    </div>
  </a>
  
  <div class="social-links">
    {member.email && (
      <a href={`mailto:${member.email}`} class="social-link email" title="Email">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
          <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.89 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
        </svg>
      </a>
    )}
    
    {member.linkedin && (
      <a href={member.linkedin} target="_blank" rel="noopener noreferrer" class="social-link linkedin" title="LinkedIn">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
          <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
        </svg>
      </a>
    )}
    
    {member.github && (
      <a href={member.github} target="_blank" rel="noopener noreferrer" class="social-link github" title="GitHub">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
        </svg>
      </a>
    )}
    
    {member.portfolio && (
      <a href={member.portfolio} target="_blank" rel="noopener noreferrer" class="social-link portfolio" title="Portfolio">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
          <path d="M14,2H6A2,2 0 0,0 4,4V20A2,2 0 0,0 6,22H18A2,2 0 0,0 20,20V8L14,2M18,20H6V4H13V9H18V20Z"/>
        </svg>
      </a>
    )}
  </div>
</div>

<style>
  .member-card {
    background: white;
    border-radius: 12px;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    overflow: hidden;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  /* Link styling for main card area */
  .member-card-link {
    text-decoration: none;
    color: inherit;
    display: block;
    flex-grow: 1;
  }
  
  .member-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 10px 25px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
  }
  
  .member-image {
    width: 100%;
    height: 400px;
    overflow: hidden;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .member-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: top;

  }
  
  .member-info {
    padding: 1.5rem;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }
  
  .member-info h3 {
    margin: 0 0 0.5rem 0;
    font-size: 1.25rem;
    font-weight: 600;
    color: #1f2937;
  }
  
  .role {
    margin: 0 0 1rem 0;
    font-size: 0.875rem;
    color: #6b7280;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  
  .bio {
    margin: 0 0 1.5rem 0;
    color: #4b5563;
    line-height: 1.6;
    flex-grow: 1;
  }
  
  .skills h4 {
    margin: 0 0 0.75rem 0;
    font-size: 0.875rem;
    font-weight: 600;
    color: #1f2937;
  }
  
  .skill-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
  }
  
  .skill-tag {
    background: #f3f4f6;
    color: #374151;
    padding: 0.25rem 0.75rem;
    border-radius: 9999px;
    font-size: 0.75rem;
    font-weight: 500;
  }
  
  .social-links {
    display: flex;
    gap: 1rem;
    padding: 1rem 1.5rem 1.5rem;
    margin-top: auto;
  }
  
  .social-link {
    color: #6b7280;
    transition: color 0.2s ease;
  }
  
  .social-link:hover {
    color: #3b82f6;
  }
  
  .social-link.email:hover { color: #ef4444; }
  .social-link.linkedin:hover { color: #0077b5; }
  .social-link.github:hover { color: #333; }
  .social-link.portfolio:hover { color: #8b5cf6; }
</style>