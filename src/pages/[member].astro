---
import Layout from '../layouts/Layout.astro';
import { members } from '../data/members.js';

export async function getStaticPaths() {
  return members.map((member) => ({
    params: { member: member.slug},
    props: { member },
  }));
}

const { member } = Astro.props;
---

<Layout>
  <main>
    <header class="hero">
      <div class="hero-content">
        <h1>{member.name}</h1>
        <p class="hero-subtitle">{member.role}</p>
      </div>
    </header>
    
    <section class="member-detail-section">
      <div class="container">
        <a href="/gruppeside" class="back-button">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
            <path d="M20 11H7.83l5.59-5.59L12 4l-8 8 8 8 1.41-1.41L7.83 13H20v-2z"/>
          </svg>
          Tilbake
        </a>
        
        <div class="member-detail-container">
          <div class="member-content">
            <h3>Bio</h3>
            <p class="member-bio">{member.bio}</p>
            <h3>Erfaring</h3>
            <p class="member-bio">{member.experience}</p>
            <div class="member-skills">
              <h3>Skills & Teknologier</h3>
              <div class="member-skill-tags">
                {member.skills.map(skill => (
                  <span class="member-skill-tag">{skill}</span>
                ))}
              </div>
            </div>
          </div>
          
          <div class="member-image-container">
            <img 
              src={member.image} 
              alt={member.name}
              class="member-profile-image"
              loading="lazy"
            />
            
            <div class="member-social-links">
              {member.email && (
                <a href={`mailto:${member.email}`} class="member-social-link email" title="Send e-post">
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.89 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
                  </svg>
                </a>
              )}
              
              {member.linkedin && (
                <a href={member.linkedin} target="_blank" rel="noopener noreferrer" class="member-social-link linkedin" title="LinkedIn profil">
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                  </svg>
                </a>
              )}
              
              {member.github && (
                <a href={member.github} target="_blank" rel="noopener noreferrer" class="member-social-link github" title="GitHub profil">
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.30.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                  </svg>
                </a>
              )}
              
              {member.portfolio && (
                <a href={member.portfolio} target="_blank" rel="noopener noreferrer" class="member-social-link portfolio" title="Portfolio">
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M14,2H6A2,2 0 0,0 4,4V20A2,2 0 0,0 6,22H18A2,2 0 0,0 20,20V8L14,2M18,20H6V4H13V9H18V20Z"/>
                  </svg>
                </a>
              )}
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>

